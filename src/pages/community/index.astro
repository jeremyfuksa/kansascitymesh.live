const summary = 'Community hub connecting visitors to contact methods, success stories, and contribution opportunities.';
const tasks = [
  'Summarize available communication channels (email, chat, in-person meetups) and response expectations.',
  'Highlight featured success stories and link to detailed narratives.',
  'Invite volunteers to contribute documentation, infrastructure, or outreach support.',
  'Integrate contact form CTA using PHP handler described in docs/03-TECHNICAL-REQUIREMENTS.md ยง2.5.'
];
