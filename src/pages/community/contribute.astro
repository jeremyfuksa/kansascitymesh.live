---
import Layout from '../../layouts/Layout.astro';
import PagePlaceholder from '../../components/PagePlaceholder.astro';

const summary = 'Explain how individuals can contribute time, gear, infrastructure, documentation, or funding to grow the network.';
const tasks = [
  'List contribution paths: host infrastructure, write guides, support events, provide hardware.',
  'Include sign-up form or integration with project management board for volunteers.',
  'Share expectations for contributors (time commitment, communication cadence).',
  'Link to donation options or sponsorship info when available.'
];
const docRefs = [
  'docs/01-SITE-ARCHITECTURE.md ยง3.7.3 (How to Contribute)',
  'README.md section 4.10 (Contribution requirements)',
  'CLAUDE.md (Community tone and participation framing)'
];
---

<Layout
  pageHeading="How to Contribute"
  description="Discover the many ways to help build, document, and sustain the Kansas City Meshtastic network."
>
  <PagePlaceholder summary={summary} tasks={tasks} docRefs={docRefs} />
</Layout>
