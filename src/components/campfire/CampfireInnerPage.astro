---
import CampfireBadge from './CampfireBadge.astro';
import CampfireRelatedLinks from './CampfireRelatedLinks.astro';

interface Breadcrumb {
  label: string;
  href: string;
}

interface TocItem {
  id: string;
  label: string;
  level: 1 | 2 | 3;
}

interface MetaInfo {
  author?: string;
  lastUpdated?: string;
  readTime?: string;
  category?: string;
}

interface RelatedLink {
  title: string;
  description?: string;
  href: string;
  external?: boolean;
}

interface Props {
  title: string;
  description?: string;
  breadcrumbs?: Breadcrumb[];
  tableOfContents?: TocItem[];
  meta?: MetaInfo;
  relatedLinks?: RelatedLink[];
}

const {
  title,
  description,
  breadcrumbs = [],
  tableOfContents = [],
  meta,
  relatedLinks = [],
} = Astro.props as Props;

const hasBreadcrumbs = breadcrumbs.length > 0;
const hasToc = tableOfContents.length > 0;
const hasSidebarSlot = Astro.slots.has('sidebar');
const hasRelatedLinks = relatedLinks.length > 0;
const showRightSidebar = hasSidebarSlot || hasRelatedLinks;
---

<section class="pt-4 lg:pt-6 pb-8 lg:pb-12 border-b border-neutral-200 dark:border-neutral-800">
  <div class="max-w-[1320px] mx-auto px-6">
    {hasBreadcrumbs && (
      <nav class="mb-6" aria-label="Breadcrumb">
        <ol class="flex flex-wrap items-center gap-2 text-[14px]">
          {breadcrumbs.map((crumb, index) => (
            <li class="flex items-center gap-2">
              {index > 0 && (
                <i class="fa-solid fa-chevron-right text-neutral-400 dark:text-neutral-600 text-xs" aria-hidden="true"></i>
              )}
              {index === breadcrumbs.length - 1 ? (
                <span class="font-medium text-neutral-900 dark:text-neutral-50">
                  {crumb.label}
                </span>
              ) : (
                <a
                  href={crumb.href}
                  class="text-neutral-600 dark:text-neutral-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
                >
                  {crumb.label}
                </a>
              )}
            </li>
          ))}
        </ol>
      </nav>
    )}

    <div class="max-w-[80ch]">
      {meta?.category && (
        <div class="mb-4">
          <CampfireBadge variant="primary">{meta.category}</CampfireBadge>
        </div>
      )}

      <h1 class="text-[40px] lg:text-[56px] font-bold text-neutral-900 dark:text-neutral-50 mb-4 leading-tight">
        {title}
      </h1>

      {description && (
        <p class="text-[18px] lg:text-[20px] text-neutral-600 dark:text-neutral-400 leading-[1.7] mb-6">
          {description}
        </p>
      )}

      {meta && (meta.author || meta.lastUpdated || meta.readTime) && (
        <div class="flex flex-wrap items-center gap-4 text-[14px] text-neutral-500 dark:text-neutral-500">
          {meta.author && (
            <div class="flex items-center gap-2">
              <i class="fa-solid fa-user" aria-hidden="true"></i>
              <span>{meta.author}</span>
            </div>
          )}
          {meta.lastUpdated && (
            <div class="flex items-center gap-2">
              <i class="fa-solid fa-clock" aria-hidden="true"></i>
              <span>Updated {meta.lastUpdated}</span>
            </div>
          )}
          {meta.readTime && (
            <div class="flex items-center gap-2">
              <i class="fa-solid fa-book-open" aria-hidden="true"></i>
              <span>{meta.readTime}</span>
            </div>
          )}
        </div>
      )}
    </div>
  </div>
</section>

<section class="py-12 lg:py-16">
  <div class="max-w-[1320px] mx-auto px-6">
    <div class="grid lg:grid-cols-12 gap-8 lg:gap-12">
      {hasToc && (
        <aside class="order-2 lg:order-1 lg:col-span-3">
          <div class="lg:sticky lg:top-24">
            <div class="bg-white dark:bg-neutral-900 rounded-[28px] border border-neutral-200 dark:border-neutral-800 p-6">
              <h2 class="text-[16px] font-bold text-neutral-900 dark:text-neutral-50 mb-4 uppercase tracking-wide">
                On This Page
              </h2>
              <nav>
                <ul class="space-y-2">
                  {tableOfContents.map((item) => (
                    <li class={item.level === 2 ? 'pl-4' : item.level === 3 ? 'pl-8' : ''}>
                      <a
                        href={`#${item.id}`}
                        class="block text-[14px] text-neutral-600 dark:text-neutral-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors py-1"
                      >
                        {item.label}
                      </a>
                    </li>
                  ))}
                </ul>
              </nav>
            </div>
          </div>
        </aside>
      )}

      <main class={`order-1 ${hasToc ? (showRightSidebar ? 'lg:col-span-6' : 'lg:col-span-9') : showRightSidebar ? 'lg:col-span-9' : 'lg:col-span-12'}`}>
        <article class="prose prose-neutral dark:prose-invert max-w-none">
          <slot />
        </article>
      </main>

      {showRightSidebar && (
        <aside class="order-3 lg:col-span-3">
          <div class="lg:sticky lg:top-24">
            {hasSidebarSlot ? (
              <slot name="sidebar" />
            ) : (
              <CampfireRelatedLinks links={relatedLinks} />
            )}
          </div>
        </aside>
      )}
    </div>
  </div>
</section>
