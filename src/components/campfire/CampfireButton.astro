---
/**
 * Campfire Design System Button Component
 * Matches the exact styling from mt/components/CampfireButton.tsx
 */
interface Props {
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost' | 'destructive';
  size?: 'small' | 'default' | 'large';
  href?: string;
  class?: string;
}

const {
  variant = 'primary',
  size = 'default',
  href,
  class: className = ''
} = Astro.props;

const baseStyles = "inline-flex items-center justify-center font-medium text-[14px] leading-[20px] rounded-[10px] transition-all";

const sizeStyles = {
  small: "h-[32px] px-[14px] py-0 gap-[6px]",
  default: "h-[40px] px-[20px] py-[10px] gap-[8px]",
  large: "h-[48px] px-[28px] py-0 gap-[8px]"
};

const variantStyles = {
  primary: "bg-[#4c627d] dark:bg-[#6284a0] text-[#f7f8f9] shadow-[0px_1px_3px_0px_rgba(0,0,0,0.1),0px_1px_2px_-1px_rgba(0,0,0,0.1)] hover:bg-[#3e4f5f] dark:hover:bg-[#527191]",
  secondary: "bg-[#edeef1] dark:bg-[#42454e] text-[#2b303b] dark:text-[#f7f8f9] shadow-[0px_1px_3px_0px_rgba(0,0,0,0.1),0px_1px_2px_-1px_rgba(0,0,0,0.1)] hover:bg-[#d8dbe0] dark:hover:bg-[#5e6371]",
  outline: "bg-[#f7f8f9] dark:bg-transparent text-[#2b303b] dark:text-[#f7f8f9] border border-[#d8dbe0] dark:border-[#5e6371] hover:bg-[#edeef1] dark:hover:bg-[#42454e]",
  ghost: "bg-transparent text-[#2b303b] dark:text-[#f7f8f9] hover:bg-[#f7f8f9] dark:hover:bg-[#42454e]",
  destructive: "bg-[#dc3a38] text-white shadow-[0px_1px_3px_0px_rgba(0,0,0,0.1),0px_1px_2px_-1px_rgba(0,0,0,0.1)] hover:bg-[#c12f2d]"
};

const classes = `${baseStyles} ${sizeStyles[size]} ${variantStyles[variant]} ${className}`;
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button class={classes}>
    <slot />
  </button>
)}
