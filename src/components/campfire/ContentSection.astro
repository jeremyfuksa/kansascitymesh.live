---
/**
 * Campfire Design System - ContentSection Component
 * Based on mt/components/ContentSection.tsx
 * Semantic section wrapper with consistent heading styles
 */
interface Props {
  id?: string;
  title?: string;
  level?: 1 | 2 | 3;
  class?: string;
}

const { id, title, level = 2, class: className = '' } = Astro.props;

const headingClasses = {
  1: 'text-[40px] lg:text-[48px] font-bold text-neutral-900 dark:text-neutral-50 mb-6',
  2: 'text-[28px] lg:text-[32px] font-bold text-neutral-900 dark:text-neutral-50 mb-4',
  3: 'text-[20px] lg:text-[24px] font-bold text-neutral-900 dark:text-neutral-50 mb-3'
};

const HeadingTag = `h${level}` as 'h1' | 'h2' | 'h3';
---

<section id={id} class={`mb-12 scroll-mt-24 ${className}`}>
  {title && (
    <HeadingTag class={headingClasses[level]}>
      {title}
    </HeadingTag>
  )}
  <div class="space-y-4 text-[16px] lg:text-[17px] text-neutral-600 dark:text-neutral-400 leading-[1.7]">
    <slot />
  </div>
</section>
