---
/**
 * Campfire Design System Badge Component
 * Matches the exact styling from mt/components/CampfireBadge.tsx
 */
interface Props {
  variant?: 'primary' | 'secondary' | 'outline' | 'success' | 'warning' | 'danger' | 'info';
  class?: string;
}

const {
  variant = 'secondary',
  class: className = ''
} = Astro.props;

const baseStyles = "inline-flex items-center justify-center gap-[4px] px-[9px] py-[3px] h-[22px] rounded-[6.8px] font-medium text-[12px] leading-[16px] uppercase tracking-wide";

const variantStyles = {
  primary: "bg-[#4c627d] dark:bg-[#6284a0] text-[#f7f8f9]",
  secondary: "bg-[#edeef1] dark:bg-[#42454e] text-[#2b303b] dark:text-[#f7f8f9]",
  outline: "bg-transparent text-[#2b303b] dark:text-[#f7f8f9] border border-[#d8dbe0] dark:border-[#5e6371]",
  success: "bg-[#739038] dark:bg-[#8fae5a] text-white dark:text-[#2b303b]",
  warning: "bg-[#ef991f] dark:bg-[#f5a838] text-white dark:text-[#2b303b]",
  danger: "bg-[#dc3a38] text-white",
  info: "bg-[#a3b2c9] dark:bg-[#6284a0] text-white"
};

const classes = `${baseStyles} ${variantStyles[variant]} ${className}`;
---

<span class={classes}>
  <slot />
</span>
