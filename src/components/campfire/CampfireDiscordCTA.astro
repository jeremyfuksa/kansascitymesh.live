---
interface Props {
  title?: string;
  description?: string;
  link?: string;
  linkText?: string;
}

const {
  title = 'Join the Discord',
  description = 'Chat with other KC mesh folks. Coordinate installs, swap coverage notes, troubleshoot together.',
  link = 'https://discord.gg/eP5VSPKU',
  linkText = 'Open Discord',
} = Astro.props as Props;
---

<section id="discord" class="py-12 lg:py-20 bg-white dark:bg-neutral-950">
  <div class="max-w-[1320px] mx-auto px-6">
    <div class="max-w-3xl mx-auto">
      <div class="bg-[#5865f2] rounded-[28px] p-8 lg:p-12 text-white shadow-xl">
        <div class="flex flex-col md:flex-row gap-6 items-start">
          <div class="flex-shrink-0">
            <div class="w-14 h-14 bg-white/20 backdrop-blur-sm rounded-[10px] flex items-center justify-center">
              <i class="fa-brands fa-discord text-2xl" aria-hidden="true"></i>
            </div>
          </div>
          <div class="flex-1">
            <h3 class="text-[26px] lg:text-[32px] font-bold mb-4">
              {title}
            </h3>
            <p class="text-[16px] lg:text-[17px] text-white/95 leading-[1.7] mb-6">
              {description}
            </p>
            <a
              href={link}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 bg-white text-[#5865f2] font-semibold px-6 h-12 rounded-[10px] shadow-lg hover:bg-white/95 transition-colors"
            >
              <i class="fa-brands fa-discord" aria-hidden="true"></i>
              {linkText.toUpperCase()}
              <i class="fa-solid fa-arrow-up-right-from-square" aria-hidden="true"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
