---
interface RelatedLink {
  title: string;
  description?: string;
  href: string;
  external?: boolean;
}

const { links = [] } = Astro.props as { links?: RelatedLink[] };
---

{links.length > 0 && (
  <div class="bg-white dark:bg-neutral-900 rounded-[28px] border border-neutral-200 dark:border-neutral-800 p-6">
    <h2 class="text-[16px] font-bold text-neutral-900 dark:text-neutral-50 mb-4 uppercase tracking-wide">
      Related
    </h2>
    <div class="space-y-4">
      {links.map((link) => (
        <a
          href={link.href}
          target={link.external ? '_blank' : undefined}
          rel={link.external ? 'noopener noreferrer' : undefined}
          class="block group"
        >
          <h3 class="text-[16px] font-semibold text-neutral-900 dark:text-neutral-50 mb-1 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
            {link.title}
          </h3>
          {link.description && (
            <p class="text-[14px] text-neutral-600 dark:text-neutral-400">
              {link.description}
            </p>
          )}
          <div class="mt-2 inline-flex items-center text-[12px] font-semibold uppercase tracking-wide text-primary-600 dark:text-primary-400">
            {link.external ? 'Visit' : 'Read'}
            <i class="fa-solid fa-arrow-right ml-2" aria-hidden="true"></i>
          </div>
        </a>
      ))}
    </div>
  </div>
)}
