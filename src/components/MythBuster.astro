---
/**
 * Always-visible myth/reality card for anti-dogma content.
 * Displays common misconceptions with clear visual rebuttal.
 */
interface Props {
  myth: string;
  reality: string;
  details?: string;
}

const { myth, reality, details } = Astro.props;
---

<div class="bg-card border border-border rounded-lg overflow-hidden shadow-sm mb-6">
  <div class="bg-danger-500/10 border-b border-danger-600/20 p-4">
    <span class="inline-block px-3 py-1 bg-danger-600 text-white text-xs font-bold uppercase rounded-full mb-2">Myth</span>
    <h3 class="text-lg font-semibold text-danger-700">{myth}</h3>
  </div>
  <div class="bg-success-50 p-4">
    <span class="inline-block px-3 py-1 bg-success-600 text-white text-xs font-bold uppercase rounded-full mb-2">Reality</span>
    <div class="text-neutral-800">
      <p class="text-base font-medium mb-2">{reality}</p>
      {details && <div class="text-sm text-neutral-600 leading-relaxed" set:html={details} />}
      <slot />
    </div>
  </div>
</div>
