---
/**
 * Simple responsive figure with optional caption for rich content inserts.
 */
interface Props {
  src: string;
  alt: string;
  caption?: string;
  className?: string;
}

const { src, alt, caption, className } = Astro.props;
---

<figure class={`mb-6 ${className ?? ""}`.trim()}>
  <img
    src={src}
    alt={alt}
    class="w-full rounded-md shadow-sm"
    loading="lazy"
    decoding="async"
  />
  {caption && (
    <figcaption class="text-sm text-neutral-500 mt-2">
      {caption}
    </figcaption>
  )}
</figure>
