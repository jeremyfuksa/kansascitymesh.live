---
/**
 * Presents a bold site-wide call-to-action panel with supporting copy and link.
 */
interface Props {
  title: string;
  description: string;
  link: string;
  linkText: string;
}

const { title, description, link, linkText } = Astro.props;
---

<section class="relative overflow-hidden rounded-[32px] bg-gradient-to-br from-primary-600 via-primary-500 to-meshtastic text-white px-8 py-12">
  <div class="absolute inset-0 opacity-20" aria-hidden="true">
    <div class="w-full h-full" style={`background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.8) 1px, transparent 0); background-size: 32px 32px;`}></div>
  </div>
  <div class="relative flex flex-col gap-5 items-center text-center">
    <h3 class="text-[32px] font-bold">{title}</h3>
    <p class="text-[18px] max-w-2xl text-white/90">{description}</p>
    <a
      href={link}
      class="inline-flex items-center gap-2 bg-white text-primary-600 px-6 h-12 rounded-[12px] font-semibold uppercase tracking-wide hover:shadow-2xl hover:scale-105 transition-all"
    >
      {linkText}
      <i class="fa-solid fa-arrow-up-right-from-square" aria-hidden="true"></i>
    </a>
  </div>
</section>
