---
interface Props {
  title: string;
  description: string;
  link: string;
  linkText: string;
}

const { title, description, link, linkText } = Astro.props;
---

<section class="card text-center border-0 bg-primary text-white py-5 px-4 shadow-sm">
  <div class="card-body d-flex flex-column gap-3">
    <h3 class="h4 fw-semibold mb-0">{title}</h3>
    <p class="lead mb-0">{description}</p>
    <div>
      <a
        href={link}
        class="btn btn-light d-inline-flex align-items-center gap-2 fw-semibold"
      >
        {linkText}
        <i class="fa-solid fa-arrow-right" aria-hidden="true"></i>
      </a>
    </div>
  </div>
</section>
