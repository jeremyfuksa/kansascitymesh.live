---
/**
 * Encourages visitors to join the coordination Discord with sensible defaults.
 */
interface Props {
  title?: string;
  description?: string;
  link?: string;
  linkText?: string;
}

const {
  title = "Join the Discord",
  description = "Hop into the KC Meshtastic Discord to coordinate installs, swap coverage notes, and chat with other builders.",
  link = "https://discord.gg/eP5VSPKU",
  linkText = "Open Discord",
} = Astro.props;
---

<section class="bg-gradient-to-br from-[#5865f2]/10 via-[#5865f2]/5 to-white dark:to-neutral-900 border border-[#5865f2]/30 rounded-[28px] p-6 lg:p-8">
  <div class="flex flex-col lg:flex-row gap-6 items-start">
    <div class="w-14 h-14 rounded-[14px] bg-[#5865f2] text-white flex items-center justify-center shadow-lg">
      <i class="fa-brands fa-discord text-2xl" aria-hidden="true"></i>
    </div>
    <div class="flex-1 space-y-3">
      <h2 class="text-[26px] font-semibold text-neutral-900 dark:text-neutral-50">{title}</h2>
      <p class="text-[16px] text-neutral-600 dark:text-neutral-300">{description}</p>
    </div>
    <div>
      <a
        href={link}
        class="inline-flex items-center gap-2 bg-[#5865f2] text-white h-12 px-6 rounded-[12px] font-semibold uppercase tracking-wide hover:bg-[#4752c4] transition-colors"
        target="_blank"
        rel="noopener noreferrer"
      >
        {linkText.toUpperCase()}
        <i class="fa-solid fa-arrow-up-right-from-square" aria-hidden="true"></i>
      </a>
    </div>
  </div>
</section>
