---
/**
 * Encourages visitors to join the coordination Discord with sensible defaults.
 */
interface Props {
  title?: string;
  description?: string;
  link?: string;
  linkText?: string;
}

const {
  title = "Join the Discord",
  description = "Hop into the KC Meshtastic Discord to coordinate installs, swap coverage notes, and chat with other builders.",
  link = "https://discord.gg/eP5VSPKU",
  linkText = "Open Discord",
} = Astro.props;
---

<section class="card border-info-subtle bg-info-subtle text-info-emphasis discord-card">
  <div class="card-body d-flex flex-column flex-lg-row align-items-lg-center gap-3">
    <div class="d-flex align-items-start gap-3">
      <div class="fs-2 text-info"><i class="fa-brands fa-discord" aria-hidden="true"></i></div>
      <div>
        <h2 class="h5 fw-semibold mb-1">{title}</h2>
        <p class="mb-0 text-body-secondary">{description}</p>
      </div>
    </div>
    <div class="ms-lg-auto">
      <a
        href={link}
        class="btn btn-info text-white fw-semibold"
        target="_blank"
        rel="noopener noreferrer"
      >
        {linkText}
      </a>
    </div>
  </div>
</section>
