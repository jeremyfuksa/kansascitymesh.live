---
interface Props {
  title: string;
  message: string;
  link?: string;
  linkText?: string;
}

const { title, message, link, linkText } = Astro.props;
---

<section class="card border-0 callout-card bg-warning-subtle py-4 px-4">
  <div class="d-flex flex-column flex-md-row gap-3 align-items-start">
    <div class="text-warning fs-2"><i class="fa-solid fa-handshake" aria-hidden="true"></i></div>
    <div>
      <h2 class="h5 fw-semibold text-body">{title}</h2>
      <p class="mb-0 text-body-secondary">
        {message}
        {
          link && linkText && (
            <a
              href={link}
              class="ms-1 fw-semibold link-primary"
              target={link.startsWith("/") ? undefined : "_blank"}
              rel={link.startsWith("/") ? undefined : "noopener noreferrer"}
            >
              {linkText}
            </a>
          )
        }
      </p>
    </div>
  </div>
</section>
