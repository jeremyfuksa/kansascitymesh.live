---
/**
 * Highlights important notices with accent border and optional call to action link.
 */
interface Props {
  title: string;
  message: string;
  link?: string;
  linkText?: string;
}

const { title, message, link, linkText } = Astro.props;
---

<section class="bg-gradient-to-br from-secondary-50 via-white to-primary-50 dark:from-secondary-900/30 dark:via-neutral-900 dark:to-primary-900/30 border border-secondary-200 dark:border-secondary-800 rounded-[28px] p-6 lg:p-8">
  <div class="flex flex-col md:flex-row gap-4 items-start">
    <div class="w-12 h-12 rounded-[12px] bg-secondary-600 text-white flex items-center justify-center shadow-lg">
      <i class="fa-solid fa-handshake" aria-hidden="true"></i>
    </div>
    <div class="space-y-3">
      <h2 class="text-[24px] font-semibold text-neutral-900 dark:text-neutral-50">{title}</h2>
      <p class="text-[16px] text-neutral-600 dark:text-neutral-300">
        {message}
        {link && linkText && (
          <a
            href={link}
            class="ml-2 font-semibold text-primary-600 dark:text-primary-400 underline decoration-2 underline-offset-4"
            target={link.startsWith("/") ? undefined : "_blank"}
            rel={link.startsWith("/") ? undefined : "noopener noreferrer"}
          >
            {linkText}
          </a>
        )}
      </p>
    </div>
  </div>
</section>
