---
/**
 * Wraps grouped content with a heading and optional supporting description.
 */
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<section class="space-y-6">
  <div class="flex flex-col gap-3">
    <p class="text-[12px] uppercase tracking-[0.3em] text-neutral-400">Featured</p>
    <h2 class="text-[32px] lg:text-[40px] font-bold text-neutral-900 dark:text-neutral-50">
      {title}
    </h2>
    {description && (
      <p class="text-[16px] text-neutral-600 dark:text-neutral-400 max-w-3xl">
        {description}
      </p>
    )}
  </div>
  <slot />
</section>
