---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<section>
  <div class="mb-3">
    <h2 class="h4 fw-semibold mb-1">{title}</h2>
    {description && <p class="text-body-secondary mb-0">{description}</p>}
  </div>
  <slot />
</section>
