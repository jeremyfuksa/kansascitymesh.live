---
/**
 * Reusable link-styled button that aligns with Bootstrap primary/outline variants.
 * Useful for action rows in content-driven pages.
 */
interface Props {
  href: string;
  variant?: "primary" | "outline";
}

const { href, variant = "primary" } = Astro.props;

const variantClass = variant === "outline" ? "btn-outline-secondary" : "btn-primary";
---

<a href={href} class={`btn ${variantClass} d-inline-flex align-items-center gap-2`}>
  <slot />
  <i class="fa-solid fa-arrow-right" aria-hidden="true"></i>
</a>
