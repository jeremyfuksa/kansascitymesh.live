---
/**
 * Reusable link-styled button that aligns with Campfire primary/outline variants.
 * Useful for action rows in content-driven pages.
 */
interface Props {
  href: string;
  variant?: "primary" | "outline";
}

const { href, variant = "primary" } = Astro.props;

const variantClass = variant === "outline"
  ? "bg-transparent text-primary-600 border-2 border-primary-600 hover:bg-primary-600 hover:text-white"
  : "bg-meshtastic text-white hover:bg-[#52d67f] shadow-lg";
---

<a href={href} class={`${variantClass} px-6 py-3 rounded-md font-semibold text-sm uppercase tracking-wide inline-flex items-center gap-2 transition-all duration-200 min-h-[44px]`}>
  <slot />
  <i class="fa-solid fa-arrow-right" aria-hidden="true"></i>
</a>
